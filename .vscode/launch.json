{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--disable-web-security" // 允许加载本地source map
      ],
      "outFiles": [
        "${workspaceFolder}/build/ext-src/**/*.js",
        "${workspaceFolder}/build/static/js/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    }
  ]
}
