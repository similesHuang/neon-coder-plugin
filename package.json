{
  "name": "neon-coder-plugin",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.23.0"
  },
  "publisher": "huanghe03",
  "activationEvents": [
    "*"
  ],
  "main": "./build/ext-src/extension.js",
  "contributes": {
    "configuration": {
      "title": "Neon Coder 配置",
      "properties": {
        "neonCoder.defaultModel": {
          "type": "string",
          "enum": [
            "gpt-4o",
            "claude-4-sonnet"
          ],
          "default": "gpt-4o",
          "description": "默认使用的AI模型"
        },
        "neonCoder.serverPort": {
          "type": "number",
          "default": 3002,
          "description": "本地服务器端口"
        },
        "neonCoder.mcpServers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "自定义MCP服务器配置列表 (JSON格式字符串)",
          "examples": [
            "{\"type\":\"stdio\",\"name\":\"my-server\",\"path\":\"/path/to/server.js\",\"description\":\"My custom MCP server\"}",
            "{\"type\":\"http\",\"name\":\"web-server\",\"url\":\"http://localhost:8080/mcp\",\"description\":\"HTTP MCP server\"}",
            "{\"type\":\"sse\",\"name\":\"sse-server\",\"url\":\"http://localhost:3001/sse\",\"description\":\"SSE MCP server\"}"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "neon-coder.start",
        "title": "Neon Coder Start",
        "category": "React"
      },
      {
        "command": "neon-coder.newSession",
        "title": "新建会话",
        "icon": "$(add)"
      },
      {
        "command": "neon-coder.showHistory",
        "title": "历史会话",
        "icon": "$(history)"
      },
      {
        "command": "neon-coder.configApiKey",
        "title": "配置 API Key",
        "icon": "$(key)"
      },
      {
        "command": "neon-coder.manageMcp",
        "title": "管理 MCP 服务器",
        "icon": "$(server-process)"
      },
      {
        "command": "neon-coder.close",
        "title": "关闭插件",
        "icon": "$(close)"
      }
    ],
    "views": {
      "neon-coder": [
        {
          "type": "webview",
          "id": "neon-coder-chat",
          "name": "Neon"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "neon-coder.newSession",
          "when": "view == neon-coder-chat",
          "group": "navigation@1"
        },
        {
          "command": "neon-coder.showHistory",
          "when": "view == neon-coder-chat",
          "group": "navigation@2"
        },
        {
          "command": "neon-coder.configApiKey",
          "when": "view == neon-coder-chat",
          "group": "navigation@3"
        },
        {
          "command": "neon-coder.manageMcp",
          "when": "view == neon-coder-chat",
          "group": "navigation@4"
        },
        {
          "command": "neon-coder.close",
          "when": "view == neon-coder-chat",
          "group": "navigation@5"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neon-coder",
          "title": "Neon",
          "icon": "$(zap)"
        }
      ]
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "neon-coder-mcp",
        "label": "Neon Coder MCP Server Provider"
      }
    ]
  },
  "dependencies": {
    "client-connect-server": "^3.0.1",
    "dotenv": "^17.2.0",
    "get-port": "^7.1.0",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "openai": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "terser": "^5.15.0"
  },
  "resolutions": {},
  "scripts": {
    "vscode:prepublish": "node ./scripts/build-non-split.js && tsc -p tsconfig.extension.json",
    "start": "react-scripts start",
    "build": "node ./scripts/build-non-split.js && tsc -p tsconfig.extension.json",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "compile": "tsc -p tsconfig.extension.json"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.23.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.5.6",
    "react-scripts": "^5.0.1",
    "rewire": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
