{
  "name": "neon-coder-plugin",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.23.0"
  },
  "publisher": "huanghe03",
  "activationEvents": [
    "*"
  ],
  "main": "./build/ext-src/extension.js",
  "contributes": {
    "configuration": {
      "title": "",
      "properties": {
        "neonCoder.aliyun_base_url": {
          "type": "string",
          "default": "https://dashscope.aliyuncs.com/compatible-mode/v1",
          "description": "阿里云endpoint地址，默认值为 https://dashscope.aliyuncs.com/compatible-mode/v1"
        },
        "neonCoder.aliyun_api_key": {
          "type": "string",
          "default": "sk-0e9f5d876e84440391946b238a5b22d4",
          "description": "阿里云网关"
        }
      }
    },
    "commands": [
      {
        "command": "neon-coder.start",
        "title": "Neon Coder Start",
        "category": "React"
      },
      {
        "command": "neon-coder.refresh",
        "title": "Neon Coder Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "neon-coder.newSession",
        "title": "新建会话",
        "icon": "$(add)"
      },
      {
        "command": "neon-coder.showHistory",
        "title": "历史会话",
        "icon": "$(history)"
      },
      {
        "command": "neon-coder.close",
        "title": "关闭插件",
        "icon": "$(close)"
      }
    ],
    "views": {
      "neon-coder": [
        {
          "type": "webview",
          "id": "neon-coder-chat",
          "name": "Neon"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "neon-coder.newSession",
          "when": "view == neon-coder-chat",
          "group": "navigation@1"
        },
        {
          "command": "neon-coder.showHistory",
          "when": "view == neon-coder-chat",
          "group": "navigation@2"
        },
        {
          "command": "neon-coder.close",
          "when": "view == neon-coder-chat",
          "group": "navigation@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neon-coder",
          "title": "Neon",
          "icon": "$(zap)"
        }
      ]
    }
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.1",
    "client-connect-server": "^3.0.1",
    "dotenv": "^17.2.0",
    "get-port": "^7.1.0",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "openai": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "terser": "^5.15.0"
  },
  "resolutions": {},
  "scripts": {
    "vscode:prepublish": "node ./scripts/build-non-split.js && tsc -p tsconfig.extension.json",
    "start": "react-scripts start",
    "build": "node ./scripts/build-non-split.js && tsc -p tsconfig.extension.json && npm run build:server",
    "test": "react-scripts test --env=jsdom",
    "build:server": "tsc -p tsconfig.server.json",
    "start:server": "NODE_ENV=development nodemon --watch server -e ts --exec \"ts-node -P tsconfig.server.json server/index.ts\"",
    "eject": "react-scripts eject",
    "compile": "tsc -p tsconfig.extension.json"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.23.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.5.6",
    "react-scripts": "^5.0.1",
    "rewire": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
